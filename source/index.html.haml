
= blog.articles.each do |article|
  %article
    %h1
      = link_to article.title, article.url
    %div
      %time
        Published:
        = article.date.strftime('%B %e, %Y')
        &amp;
        Reading time:
        = article.body.reading_time :format => :approx
    = article.summary
    = link_to 'Read more', article.url
